@import compass
@import compass/reset
@import compass/layout
@import compass/css3
@import compass/typography

@import compass/utilities/sprites
@import "icons/*.png"

@include all-icons-sprites(true)

.browser-upgrade
  background: #ccc
  color: #000
  margin: 0
  padding: 1em 0
  text-align: center
  a
    text-decoration: underline


=font-mix($f-size, $f-weight, $f-height)
  font-size:   $f-size
  font-weight: $f-weight
  line-height: $f-height

+sticky-footer(40px, ".main-wraper", ".root-footer", ".footer")

body  
  +font-mix(16px, 200, 25px)
  font-family: Open Sans, sans-serif
  color: #293041
  background: url(../images/main-bg.jpg) no-repeat center center
  background-size: cover

footer
  +font-mix(20px, 200, 30px)
  padding: 0 20px
  color: #fff
  .copy--block
    +float-left
  .policies--block
    +float-right

h2
  +font-mix(42px, 400, 51px)

h3
  +font-mix(29px, 400, 38px)

p
  +font-mix(26px, 200, 35px)

b, strong
  font-weight: 400

label
  +font-mix(24px, 200, 33px)
  color: #859bbb

.login-container
  position: absolute
  width: 100%
  height: 100%
  text-align: center
  .login--block
    +box-sizing(border-box)
    display: inline-block
    position: relative
    width: 600px
    min-height: 750px
    top: 50%
    background: #fff
    transform: translateY(-50%)
    text-align: left

.login--header
  +clearfix
  margin-bottom: 30px
  padding: 25px 35px 21px 35px
  border-bottom: solid #d9e7f7 1px
  .icon
    +float-left
    margin-right: 16px
  h2
    padding-top: 10px

.login--content 
  padding: 0 35px 21px 35px
  color: red